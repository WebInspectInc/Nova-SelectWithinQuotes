{
    "identifier": "org.SelectWithinQuotes",
    "name": "Select Within Quotes",
    "organization": "WebInspectInc",
    "description": "This extension adds the ability to select text within quotation marks.",
    "version": "1.0",
    "categories": ["commands"],
    
    "main": "main.js",
    
    "activationEvents": [
        "onLanguage:javascript"
    ],
    
    "entitlements": {
        
    },
    
    "commands": {
        "editor": [
            {
                "title": "Select Within Quotes",
                "command": "selectWithinQuotes",
                "shortcut": "cmd-shift-,",
                "when": "editorHasFocus"
            }
        ]
    }
}
